datasource mongo {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  balance    Float?
  bank       String?
  bio        String?
  charges    Boolean?
  city       String?
  country    String?
  created_at DateTime @default(now())
  email      String   @unique
  iban       String?
  id         String   @id @default(auto()) @map("_id") @mongo.ObjectId
  image      String?
  name       String?
  password   String
  phone      String?
  roles      Json
  updated_at DateTime @updatedAt
  username   String   @unique
}

model Watch {
  change      Float?
  contentType String?
  cPrice      Float?
  createdAt   DateTime @default(now())
  id          String   @id @default(auto()) @map("_id") @mongo.ObjectId
  scrip       String?
  soldAt      String?
  sPrice      Float?
  updatedAt   DateTime @updatedAt
  userId      String?
}

model Post {
  attachments Json?
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(auto()) @map("_id") @mongo.ObjectId
  title       String?
  updatedAt   DateTime @updatedAt
  userId      String?
}

model Trade {
  createdAt DateTime @default(now())
  id        String   @id @default(auto()) @map("_id") @mongo.ObjectId
  price     Float?
  scrip     String?
  shares    Float?
  types     String?
  updatedAt DateTime @updatedAt
  userId    String?
}
